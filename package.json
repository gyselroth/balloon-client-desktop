{
  "name": "balloon-desktop",
  "productName": "Balloon",
  "description": "Balloon Desktop Client",
  "version": "1.3.0-beta1",
  "author": "gyselroth GmbH  <opensource@gyselroth.net>",
  "copyright": "Â© 2017-2020, gyselroth GmbH",
  "homepage": "https://www.gyselroth.com",
  "license": "GPL-3.0",
  "main": "app/main.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gyselroth/balloon-client-desktop.git"
  },
  "build": {
    "appId": "com.gyselroth.balloon-desktop",
    "files": [
      "app/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      "resources/**/*",
      "node_modules/fileicon/bin/fileicon"
    ],
    "mac": {
      "artifactName": "${os}/${name}-${version}-mac.${ext}"
    },
    "win": {
      "certificateSubjectName": "CN=gyselroth GmbH, O=gyselroth GmbH, L=Zurich, C=CH"
    },
    "linux": {
      "category": "Network"
    },
    "pkg": {
      "allowCurrentUserHome": false
    },
    "deb": {
      "afterInstall": "build/fpm-scripts/postinstall"
    },
    "nsis": {
      "artifactName": "${name}-setup-${version}.${ext}",
      "allowToChangeInstallationDirectory": true,
      "oneClick": false,
      "license": "LICENSE",
      "installerSidebar": "build/installerSidebar.bmp",
      "uninstallerSidebar": "build/installerSidebar.bmp"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "gyselroth",
        "repo": "balloon-client-desktop"
      }
    ],
    "fileAssociations": [
      {
        "ext": "burl",
        "description": "Balloon URL Shortcut",
        "mimeType": "application/vnd.balloon.burl"
      }
    ]
  },
  "bugs": {
    "url": "https://github.com/gyselroth/balloon-client-desktop/issues"
  },
  "scripts": {
    "postinstall": "install-app-deps",
    "prepack": "gulp build --env=production",
    "pack": "electron-builder --dir",
    "prebuild": "gulp build --env=production",
    "build-osx": "npm run prebuild && electron-builder --mac pkg zip -p never",
    "build-win": "npm run prebuild && electron-builder --win --ia32 --x64 -p never",
    "build-linux": "npm run prebuild && electron-builder --linux deb rpm zip -p never",
    "build-linux-deb": "npm run prebuild && electron-builder --linux deb -p never",
    "prerelease": "gulp build --env=production",
    "release-osx": "npm run prerelease && electron-builder --mac pkg zip -p always",
    "release-win": "npm run prerelease && electron-builder --win --ia32 --x64 -p always",
    "release-linux": "npm run prerelease && electron-builder --linux deb rpm zip -p always",
    "prepackdev": "gulp build --env=development",
    "packdev": "electron-builder --dir",
    "prebuilddev": "gulp build --env=development",
    "builddev-osx": "npm run prebuilddev && electron-builder --mac pkg zip -p never",
    "builddev-win": "npm run prebuilddev && electron-builder --win --x64 -p never",
    "builddev-linux": "npm run prebuilddev && electron-builder --linux deb -p never",
    "start": "gulp start",
    "startprod": "gulp start --env=production"
  },
  "devDependencies": {
    "electron": "^7.1.8",
    "electron-builder": "21.2.0",
    "gulp": "^4.0.2",
    "minimist": "~1.2.0"
  },
  "dependencies": {
    "@gyselroth/balloon-node-sync": "0.6.1",
    "@gyselroth/icon-collection": "^1.0.13",
    "@gyselroth/node-advanced-desktop": "^1.0.5",
    "@openid/appauth": "^1.2.6",
    "app-migrations": "^0.3.0",
    "archiver": "~3.1.1",
    "async": "~3.1.0",
    "auto-launch": "^5.0.5",
    "electron-is-dev": "~1.1.0",
    "electron-settings": "~3.2.0",
    "electron-traywindow-positioner": "1.1.0",
    "electron-updater": "^4.2.0",
    "escape-string-regexp": "~2.0.0",
    "graceful-fs": "^4.2.3",
    "handlebars": "^4.6.0",
    "javascript-time-ago": "^2.0.6",
    "jquery": "^3.4.1",
    "jstree": "^3.3.8",
    "keytar": "~5.0.0",
    "lodash": "^4.17.15",
    "mkdirp": "~0.5.1",
    "moment": "~2.24.0",
    "nedb": "~1.8.0",
    "node-ipc": "^9.1.1",
    "object-hash": "^2.0.1",
    "prepend-file": "~1.3.1",
    "pretty-bytes": "^5.3.0",
    "request": "~2.88.0",
    "rimraf": "~3.0.0",
    "sprintf-js": "^1.1.2",
    "sudo-prompt": "^9.1.1",
    "systeminformation": "^4.18.1",
    "ubuntu-fontface": "~0.1.13",
    "winston": "^3.2.1"
  }
}
