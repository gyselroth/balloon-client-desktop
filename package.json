{
  "name": "balloon-desktop",
  "productName": "Balloon",
  "description": "Balloon Desktop Client",
  "version": "0.0.43-beta.1",
  "author": "gyselroth GmbH  <opensource@gyselroth.net>",
  "copyright": "Â© 2017-2018, gyselroth GmbH",
  "homepage": "https://www.gyselroth.com",
  "license": "GPL-3.0",
  "main": "app/main.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gyselroth/balloon-client-desktop.git"
  },
  "build": {
    "appId": "com.gyselroth.balloon-desktop",
    "files": [
      "app/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": "resources/**/*",
    "mac": {
      "artifactName": "${os}/${productName}-${version}${env.BLN_ARTIFACT_APPENDIX}.${ext}"
    },
    "linux": {
      "category": "Network"
    },
    "pkg": {
      "allowCurrentUserHome": false
    },
    "deb": {
      "afterInstall": "build/fpm-scripts/postinstall"
    },
    "nsis": {
      "artifactName": "${productName}-Setup-${version}${env.BLN_ARTIFACT_APPENDIX}.${ext}",
      "allowToChangeInstallationDirectory": true,
      "oneClick": false,
      "license": "LICENSE"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "gyselroth",
        "repo": "balloon-client-desktop"
      }
    ]
  },
  "bugs": {
    "url": "https://github.com/gyselroth/balloon-client-desktop/issues"
  },
  "scripts": {
    "postinstall": "install-app-deps",
    "prepack": "gulp build --env=production",
    "pack": "build --dir",
    "prebuild": "gulp build --env=production",
    "build-osx": "npm run prebuild && BLN_ARTIFACT_APPENDIX='' build --mac pkg zip -p never",
    "build-win": "npm run prebuild && set BLN_ARTIFACT_APPENDIX='' && build --win --ia32 --x64 -p never",
    "build-linux": "npm run prebuild && BLN_ARTIFACT_APPENDIX='' build --linux deb rpm zip -p never",
    "build-linux-deb": "npm run prebuild && BLN_ARTIFACT_APPENDIX='' build --linux deb -p never",
    "prerelease": "gulp build --env=production",
    "release-osx": "npm run prerelease && BLN_ARTIFACT_APPENDIX='' build --mac pkg zip",
    "release-win": "npm run prerelease && set BLN_ARTIFACT_APPENDIX='' && build --win --ia32 --x64",
    "release-linux": "npm run prerelease && BLN_ARTIFACT_APPENDIX='' build --linux deb rpm zip",
    "prepackdev": "gulp build --env=development",
    "packdev": "build --dir",
    "prebuilddev": "gulp build --env=development",
    "builddev-osx": "npm run prereleasedev && BLN_ARTIFACT_APPENDIX='-dev' build --mac pkg zip -p never",
    "builddev-win": "npm run prereleasedev && set BLN_ARTIFACT_APPENDIX='-dev' && build --win --ia32 --x64 -p never",
    "builddev-linux": "npm run prereleasedev && BLN_ARTIFACT_APPENDIX='-dev' build --linux deb -p never",
    "start": "gulp start",
    "startprod": "gulp start --env=production"
  },
  "devDependencies": {
    "chai": "~3.5.0",
    "electron": "~1.7.11",
    "electron-builder": "19.27.3",
    "electron-mocha": "~3.5.0",
    "electron-rebuild": "1.6.0",
    "gulp": "~3.9.1",
    "gulp-batch": "~1.0.5",
    "gulp-less": "~3.3.0",
    "gulp-plumber": "~1.1.0",
    "gulp-util": "~3.0.7",
    "gulp-watch": "~4.3.11",
    "istanbul": "~0.4.5",
    "minimist": "~1.2.0",
    "mocha": "~3.2.0",
    "rollup": "~0.36.4",
    "rollup-plugin-istanbul": "~1.1.0",
    "source-map-support": "~0.4.6",
    "spectron": "~3.4.0"
  },
  "dependencies": {
    "@gyselroth/balloon-node-sync": "~0.0.33",
    "@openid/appauth": "~0.2.4",
    "app-migrations": "~0.1.2",
    "archiver": "~1.3.0",
    "auto-launch": "^5.0.5",
    "electron-is-dev": "~0.3.0",
    "electron-settings": "~3.1.4",
    "electron-traywindow-positioner": "0.0.2",
    "electron-updater": "2.10.1",
    "graceful-fs": "~4.1.11",
    "handlebars": "^4.0.11",
    "jquery": "~3.0.0",
    "keytar": "^4.0.5",
    "lodash": "~4.17.4",
    "mkdirp": "~0.5.1",
    "moment": "~2.20.1",
    "prepend-file": "~1.3.1",
    "querystring": "~0.2.0",
    "request": "~2.83.0",
    "rimraf": "~2.6.2",
    "ubuntu-fontface": "~0.1.13",
    "underscore": "~1.8.3",
    "uuid4": "~1.0.0",
    "winston": "~2.4.0"
  }
}
